<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ctec.textingappactivity.UpdateTextingActivity"
                android:background="#0080ff">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RecieveField"
        android:layout_below="@+id/NumberField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#3399ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SendField"
        android:layout_below="@+id/RecieveField"
        android:layout_marginTop="116dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#3399ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send "
        android:id="@+id/Send"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="#3399ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/NumberField"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#3399ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thomas"
        android:id="@+id/Thomas"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Clayton"
        android:layout_alignStart="@+id/Clayton"
        android:theme="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="#3399ff"
        android:allowUndo="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clayton"
        android:id="@+id/Clayton"
        android:theme="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="#3399ff"
        android:layout_alignRight="@+id/SendField"
        android:layout_alignEnd="@+id/SendField"
        android:layout_below="@+id/Thomas" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_above="@+id/Send"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/Send" />

</RelativeLayout>
